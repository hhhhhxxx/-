            <input bindinput="formInputChange" bindfail="tip" value="{{form.userName}}" data-field="userName" class="weui-input" placeholder="输入用户名" />
        </mp-cell>
        <mp-cell class="form_item" prop="userName" title="姓名">
            <input bindinput="formInputChange" bindfail="tip" value="{{form.userName}}" data-field="userName" class="weui-input" placeholder="输入用户名" />
        </mp-cell>
        <mp-cell class="form_item" prop="userName" title="姓名">
            <input bindinput="formInputChange" bindfail="tip" value="{{form.userName}}" data-field="userName" class="weui-input" placeholder="输入用户名" />
        </mp-cell>
    </mp-cells>
