<view class="bg">
    <view class="head">
        <view class="headIcon">
            <image src="{{userInfo.avatarUrl}}" style="width:70px;height:70px;"></image>
        </view>
        <view class="login">{{userInfo.nickName}}</view>
    </view>
    <button class="button" open-type="getUserInfo" wx:if="{{hasUserInfo}}" bindgetuserinfo="doAuthorization">
        微信登录
    </button>
</view>
<view class="hr"></view>
<navigator url="/pages/info/updateInfo/updateInfo">
    <view class='item'>
        <view class="title">修改个人信息</view>
    </view>
</navigator>
<view class="line"></view>
<navigator url="/pages/index/index">
<view class='item'>
    <view class="title" bindtap="loginout">退出登录</view>
</view>
</navigator>
<view class="hr"></view>