.bg .head {
  height: 200px;
  background-color: var(--themeColor);
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.bg .head .username {
  color: #eee;
  font-size: 20px;
}
.bg .head .headIcon {
  margin: 10rpx;
}
.bg .head .headIcon image {
  width: 200rpx;
  border-radius: 50%;
  overflow: hidden;
  box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.5);
}
.item {
  display: flex;
  flex-direction: row;
}
.item .title {
  padding-top: 15px;
  padding-bottom: 15px;
  padding-left: 15px;
  font-size: 15px;
}
.detail2 {
  font-size: 15px;
  position: absolute;
  right: 10px;
  height: 50px;
  line-height: 50px;
  color: #888;
}
.button {
  margin: 10px;
  font-size: 14px;
}
.hr {
  width: 100%;
  height: 15px;
  background-color: #f4f5f6;
}
.line {
  border: 1px solid #ccc;
  opacity: 0.2;
}
