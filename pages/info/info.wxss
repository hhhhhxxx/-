.bg .head {
  position: relative;
  width: 100%;
  height: 200px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.bg .head .username {
  color: #eee;
  font-size: 20px;
}
.bg .head .headIcon {
  margin: 10rpx;
}
.bg .head .headIcon image {
  width: 200rpx;
  border-radius: 50%;
  overflow: hidden;
  box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.5);
}
.item {
  display: flex;
  flex-direction: row;
}
.item .title {
  padding-top: 15px;
  padding-bottom: 15px;
  padding-left: 15px;
  font-size: 15px;
}
.detail2 {
  font-size: 15px;
  position: absolute;
  right: 10px;
  height: 50px;
  line-height: 50px;
  color: #888;
}
.button {
  margin: 10px;
  font-size: 14px;
}
.hr {
  width: 100%;
  height: 15px;
  background-color: #f4f5f6;
}
.line {
  border: 1px solid #ccc;
  opacity: 0.2;
}
.sea {
  background-color: whitesmoke;
  background-image: linear-gradient(#003775, rgba(255, 255, 255, 0) 80%, rgba(255, 255, 255, 0.5) 80%);
  box-shadow: 0 2px 30px rgba(0, 0, 0, 0.2);
  position: relative;
  overflow: hidden;
}
.sea .title {
  color: white;
  font-size: 24px;
  font-family: serif;
  text-align: center;
  /* 全部大写 */
  text-transform: uppercase;
  line-height: 250px;
  letter-spacing: 0.4em;
  z-index: 1;
  position: absolute;
  width: 100%;
}
.sea .wave {
  width: 900px;
  height: 900px;
  position: absolute;
  background-color: deepskyblue;
  top: -700px;
  left: -260px;
  /* 滤镜  */
  filter: opacity(0.4);
  border-radius: 43%;
  animation: dirft linear infinite;
  animation-duration: 5s;
  transform-origin: 50% 48%;
}
@keyframes dirft {
  from {
    transform: rotate(360deg);
  }
}
/* 匹配同类型中的第n个同级兄弟元素。 */
.sea .wave:nth-of-type(1) {
  animation-duration: 5s;
  /* display: none; */
}
.sea .wave:nth-of-type(2) {
  animation-duration: 7s;
  /* display: none; */
}
.sea .wave:nth-of-type(3) {
  animation-duration: 9s;
  /* display: none; */
  background-color: red;
  filter: opacity(0.1);
}
