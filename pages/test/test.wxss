page {
  background-color: #f9f9f9;
}
.addr_manage .addr_ma_item {
  display: flex;
  border-bottom: 1px solid #ececec;
  padding: 20rpx;
  align-items: center;
  color: #666666;
}
.addr_manage .addr_ma_item .addr_ma_txt {
  display: 2;
}
.addr_manage .addr_ma_item .addr_ma_input {
  flex: 4;
  margin-left: 30rpx;
  padding-right: 20rpx;
}
.province_select {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.province_select .picker_wrap {
  display: flex;
  flex: 5;
}
.province_select .picker_wrap .addr_ma_txt {
  margin-right: 20rpx;
}
.province_select .picker_wrap picker {
  width: 70%;
}
.province_select .picker_wrap .default_picker {
  color: #acacac;
}
.province_select .addr_ma_icon {
  font-size: 30rpx;
  color: #acacac;
}
.submit_btn_wrap {
  margin-top: 20rpx;
  padding: 0 20rpx;
  width: 100%;
}
.submit_btn_wrap button {
  font-weight: normal;
  width: 100% !important;
  margin-top: 20rpx;
}
/*=========================weui==========================*/
.we_form_wrap .form_item {
  display: flex;
  color: #666666;
  font-size: 28rpx;
}
.we_form_wrap .form_item_region {
  color: #666666;
  font-size: 28rpx;
}
.we_form_wrap .cell--weui-cell {
  width: 100%;
}
.we_form_wrap .weui-label {
  width: 136rpx;
}
