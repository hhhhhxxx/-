page {
  background-color: #f9f9f9;
}
.header {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: var(--themeColor);
}
.header .title {
  color: #fff;
  font-size: 50rpx;
  margin-bottom: 50rpx;
}
.header .logo {
  margin: 80rpx 0 30rpx 0;
  width: 200rpx;
}
.submit_btn_wrap {
  margin-top: 20rpx;
  width: 100%;
}
.submit_btn_wrap button {
  display: block;
  font-weight: normal;
}
.submit_btn_wrap .submitBtn {
  width: 300rpx !important;
  background-color: var(--themeColor);
}
.submit_btn_wrap .regBtn {
  margin-top: 10rpx;
  width: 300rpx !important;
  border-color: #ddd;
}
/*=========================weui==========================*/
.we_form_wrap .form_item {
  display: flex;
  color: #666666;
  font-size: 28rpx;
}
.we_form_wrap .cell--weui-cell {
  width: 100%;
}
.we_form_wrap .weui-label {
  width: 136rpx;
}
