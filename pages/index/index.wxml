<view class="we_form_wrap">
  <!--
   models:需要校验的表单数据
   rules：表单校验的规则列表
   prop="userName" 和 data-field="userName"的值要一样，不然验证不了
  -->
  <!--顶部错误提示-->
  <mp-toptips msg="{{errorMsg}}" type="error" show="{{errorMsg}}" delay="1500"></mp-toptips>
  
  <view>慢病管理平台</view>
  <mp-form id="form" rules="{{rules}}" models="{{form}}">
    <mp-cells>
      <mp-cell class="form_item" prop="userName" title="姓名">
        <input bindinput="formInputChange" bindfail="tip"
        value="{{form.userName}}" data-field="userName" class="weui-input" placeholder="输入用户名"/>
      </mp-cell>
            <mp-cell class="form_item" prop="password" title="密码">
        <input bindinput="formInputChange" bindfail="tip"
        value="{{form.password}}" data-field="password" class="weui-input" placeholder="输入密码"/>
      </mp-cell>
    </mp-cells>
    <!--提交按钮-->
    <view class="submit_btn_wrap">
      <button class="weui-btn" type="primary" bindtap="submitForm">确定</button>
    </view>
  </mp-form>
</view>


