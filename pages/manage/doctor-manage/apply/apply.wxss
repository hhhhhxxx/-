.container .row {
  display: flex;
  font-size: 30rpx;
  height: 130rpx;
  align-items: center ;
  position: relative;
  padding: 0 40rpx;
}
.container .row .head {
  border-radius: 50%;
  width: 110rpx;
}
.container .row .text {
  margin-left: 30rpx;
}
.container .row .text .name {
  max-width: 150px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.container .row .text .intro {
  color: var(--grayText);
  max-width: 150px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.container .row .raw {
  width: 40rpx;
  position: absolute;
  right: 30rpx;
}
.hr {
  width: 100%;
  height: 15px;
  background-color: #f4f5f6;
}
.line {
  border: 1px solid #ccc;
  opacity: 0.2;
}
.operation {
  width: 200rpx;
  position: absolute;
  right: 40rpx;
  display: flex;
}
.operation button {
  margin: 0;
  width: 110rpx;
  font-size: 30rpx;
  margin: 5rpx;
}
.tip {
  margin-top: 20rpx;
  color: var(--grayText);
  text-align: center;
}
